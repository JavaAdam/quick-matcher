<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
      <filter
            class="org.javaadam.quickmatcher.jdt.internal.ProjectMatcherFilter"
            description="%filter.description"
            enabled="true"
            id="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter"
            name="%filter.name"
            targetId="org.eclipse.jdt.ui.PackageExplorer">
      </filter>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.jdt.ui.PackageExplorer">
         <control
               class="org.javaadam.quickmatcher.jdt.internal.ToolbarControlContribution">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter">
                  <equals
                        value="true">
                  </equals>
               </with>
            </visibleWhen>
         </control>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.javaadam.quickmatcher.jdt.internal.FilterEnablementSourceProvider">
         <variable
               name="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.ui.edit.paste">
         <class
               class="org.eclipse.ui.internal.handlers.WidgetMethodHandler">
            <parameter
                  name="methodName"
                  value="paste">
            </parameter>
         </class>            
         <activeWhen>
         <and>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="org.javaadam.quickmatcher.common.widgets.TextWithCancelButton.textfield">
               </equals>
            </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            commandId="org.eclipse.ui.edit.cut">
         <class
               class="org.eclipse.ui.internal.handlers.WidgetMethodHandler">
            <parameter
                  name="methodName"
                  value="cut">
            </parameter>
         </class>            
         <activeWhen>
         <and>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="org.javaadam.quickmatcher.common.widgets.TextWithCancelButton.textfield">
               </equals>
            </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            commandId="org.eclipse.ui.edit.copy">
         <class
               class="org.eclipse.ui.internal.handlers.WidgetMethodHandler">
            <parameter
                  name="methodName"
                  value="copy">
            </parameter>
         </class>            
         <activeWhen>
         <and>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="org.javaadam.quickmatcher.common.widgets.TextWithCancelButton.textfield">
               </equals>
            </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            commandId="org.eclipse.ui.edit.selectAll">
         <class
               class="org.eclipse.ui.internal.handlers.SelectAllHandler">
            <parameter
                  name="methodName"
                  value="selectAll">
            </parameter>
         </class>            
         <activeWhen>
         <and>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="org.javaadam.quickmatcher.common.widgets.TextWithCancelButton.textfield">
               </equals>
            </with>
            </and>
         </activeWhen>
      </handler>
   </extension>
</plugin>
