<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
      <filter
            class="org.javaadam.quickmatcher.jdt.internal.ProjectMatcherFilter"
            description="%filter.description"
            enabled="true"
            id="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter"
            name="%filter.name"
            targetId="org.eclipse.jdt.ui.PackageExplorer">
      </filter>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.jdt.ui.PackageExplorer">
         <control
               class="org.javaadam.quickmatcher.jdt.internal.ToolbarControlContribution">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter">
                  <equals
                        value="true">
                  </equals>
               </with>
            </visibleWhen>
         </control>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.javaadam.quickmatcher.jdt.internal.FilterEnablementSourceProvider">
         <variable
               name="org.eclipse.jdt.java.ui.filters.ProjectMatcherFilter"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
